<%= javascript_include_tag('userlist.js') %>
<div class="container-fluid list">
    <div class="">
        <div class="row">
            <div class="col-lg-9">
                <div class="main-box clearfix">
                    <div class="table-responsive">
                        <h5 id="userlist-heading" class="username">User-List</h5>
                        <table class="table user-list">
                            <thead>
                                <tr>
                                    <th><span>Name </span></th>
                                    <th><span>Email</span></th>
                                    <th class="text-center"><span>Phone Number</span></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @users.each do |user| %>
                                <tr onclick="openSidebar(this)" class="table-row cursor-pointer">
                                    <td>
                                    <% if user.profile_picture.attached? %>
                                    <%= image_tag user.profile_picture, class: "img img-username",  alt: "Profile Picture" %>
                                  <% else %>
                                  <%= image_tag "https://i.pinimg.com/originals/f1/0f/f7/f10ff70a7155e5ab666bcdd1b45b726d.jpg", class: "img-username", alt: "Default Profile Picture" %>
                                  <% end %>

                                        <p class="fs-6 mt-3 cursor-help"><%= "#{user.first_name} #{user.last_name}" %></p>
                                    </td>
                                    <td>
                                        <a class="cursor-pointer email text-dark pl-5"><%= user.email %></a>
                                    </td>
                                    <td class="text-center">
                                        <p class="phone fs-6 pt-3"><%= user.mobile_number %></p>
                                    </td>
                                    

                                    <td class="d-none">
                                    <p class="suspend"><%= user.suspended %></p>
                                        <p class="id"><%= user.id %></p>
                                        <p class="address"><%= user.address %></p>
                                        <p class="aboutme"><%= user.about_me %></p>
                                        <p class="businessid"><%= user.business_id_card %></p>
                                    </td>
                                </tr>   
                            <% end %>

                            </tbody>
                        </table>
                        <div class="pagination-container">
                            <div class="links">
                            <%= will_paginate @users, previous_label: 'Previous', next_label: 'Next' %>               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div id="panelA" class="side-panel fixed-side-panel">
                    <div class="user-info">
                        <img src="" alt="User Profile Image" class="user-profile-image" style="width: 100px; height: 100px;" />
                        <h5 class="username">Mila Kunis</h5>
                        <a href="#" class="btn btn-link">
                            <p class="businessid">Business ID</p>
                            
                        </a>
                        <p id="id" class="id d-none"></p>
                        <p  class="suspend d-none"></p>
                        
                    </div>
                    <div class="contact-info">
                        <h5 class="pt-4">Contact Info</h5>
                        <p class="email d-flex align-items-center">
                            <i class="fa fa-envelope me-2 icon-style"></i>
                            <a href="mailto:mila@kunis.com">mila@kunis.com</a>
                        </p>

                        <i class="fa fa-phone fs-4 icon-style" ></i>
                        <p class="phone d-flex align-items-center"></p>
                            
                        <p class="heading fs-6"><i class="fa fa-map-marker fs-4 icon-style" ></i>Address :-&nbsp;</p><p class="address"></p>
                        <br/>
                        <div class="about-container pt-3">
                        <p class="heading fs-6">About Me :-&nbsp;</p>
                        <p class="aboutme fs-6">This is some information about me.</p>
                      </div>
                                          </div>
                    
                    <button onclick="suspendUser()" id="suspend-user-button" class="suspend-btn btn">Suspend</button>
                    
                </div>
            </div>
        </div>
    </div>
</div>